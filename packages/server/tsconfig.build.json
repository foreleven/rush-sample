{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "isolatedModules": true,
    "strict": true,
    "target": "ESNext",
    "rootDir": "./src",
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/es"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
